{{{titleView}}}
<div class="container">
    <a href="/admin/home">
        <h1>List Users</h1>
    </a>
    <!-- Search box -->
    <form action="/admin/search">
        <div class="form-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Search..." name="search">
        </div>
    </form>

    <!-- Table to display user list -->
    <div class=" text-right float-right">
        <a href="/admin/addUsers" class="btn btn-primary">Add User</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>PassWord</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="">
            {{#each users}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td><img src="{{this.image}}" style="width: 50px; height: 50px; border-radius: 50%;
                border-color: black; border-width: 10px;" /> </td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>
                    <a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete/{{this._id}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>